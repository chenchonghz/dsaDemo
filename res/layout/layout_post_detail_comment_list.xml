<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_post_detailed_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_width"
        android:layout_marginLeft="@dimen/comment_item_margin"
        android:layout_marginRight="@dimen/comment_item_margin" >

        <RelativeLayout
            android:id="@+id/rl_post_detailed_transmit"
            android:layout_width="@dimen/rl_width_large"
            android:layout_height="@dimen/rl_width"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/auth_margin_left" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_post_detailed_transmittab"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tv_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/post_detailed_transmit"
                    android:textColor="@drawable/tab_selector"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_post_detailed_transmitcount"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tv_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_micro"
                    android:layout_toRightOf="@id/tv_post_detailed_transmittab"
                    android:gravity="center_vertical"
                    android:text="@string/post_detailed_tv_count"
                    android:textColor="@drawable/tab_selector"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_post_detailed_selecttransmit"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/underline_selector" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_post_detailed_line"
            android:layout_width="1px"
            android:layout_height="@dimen/search_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/auth_margin_left"
            android:layout_toRightOf="@id/rl_post_detailed_transmit"
            android:background="@color/line_list" />

        <RelativeLayout
            android:id="@+id/rl_post_detailed_comment"
            android:layout_width="@dimen/rl_width_large"
            android:layout_height="@dimen/rl_width"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/auth_margin_left"
            android:layout_toRightOf="@id/tv_post_detailed_line" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_post_detailed_commenttab"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tv_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/post_detailed_comment"
                    android:textColor="@drawable/tab_selector"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_post_detailed_commentcount"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tv_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_micro"
                    android:layout_toRightOf="@id/tv_post_detailed_commenttab"
                    android:gravity="center_vertical"
                    android:text="@string/post_detailed_tv_count"
                    android:textColor="@drawable/tab_selector"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_post_detailed_selectcomment"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/underline_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_post_detailed_laud"
            android:layout_width="@dimen/rl_width_large"
            android:layout_height="@dimen/rl_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/auth_margin_right" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_post_detailed_laudtab"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tv_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/post_detailed_laud"
                    android:textColor="@drawable/tab_selector"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_post_detailed_laudcount"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tv_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_micro"
                    android:layout_toRightOf="@id/tv_post_detailed_laudtab"
                    android:gravity="center_vertical"
                    android:text="@string/post_detailed_tv_count"
                    android:textColor="@drawable/tab_selector"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_post_detailed_selectlaud"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/underline_selector" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_post_detailed_tab_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_below="@id/rl_post_detailed_tab"
        android:background="@color/line_list" />

    <TextView
        android:id="@+id/tv_post_detailed_commentnone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_height_large"
        android:layout_below="@id/tv_post_detailed_tab_line"
        android:gravity="center"
        android:text="@string/post_detailed_tv_commentnone"
        android:textColor="@color/font_disable" />

    <com.szrjk.widget.NoScrollListView
        android:id="@+id/lv_post_detailed_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_post_detailed_commentnone"
        android:layout_marginBottom="20dp"
        android:divider="@color/bg_global"
        android:dividerHeight="1px"
        android:footerDividersEnabled="true"
        android:visibility="gone" >
    </com.szrjk.widget.NoScrollListView>

</RelativeLayout>
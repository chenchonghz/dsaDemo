<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_coterie_top_bg"
            android:layout_width="match_parent"
            android:layout_height="245dp" >

            <ImageView
                android:id="@+id/iv_coterie_top_bg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_wall_bg02" />

            <RelativeLayout
                android:id="@+id/rl_coterie_avatar"
                android:layout_width="@dimen/rly_self_avatar"
                android:layout_height="@dimen/rly_self_avatar"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_coterieFace"
                    android:layout_width="@dimen/iv_self_avatar"
                    android:layout_height="@dimen/iv_self_avatar"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lly_hv"
                style="@style/SendButton"
                android:layout_width="@dimen/header_height"
                android:layout_height="@dimen/header_height"
                android:layout_alignParentTop="true"
                android:background="@null" >

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/icon_back_32" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl_coterie_avatar"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_left"
                android:text="@string/edit_profile"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_middle"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="圈子信息"
                android:textColor="@color/font_jobtitle"
                android:textSize="@dimen/font_size_middle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tv_coterieName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/font_disable"
                    android:textSize="@dimen/font_size_middle" />

                <TextView
                    android:id="@+id/tv_createDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/font_disable"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_coterieMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tv_coterieMember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="圈子成员"
                    android:textColor="@color/font_jobtitle"
                    android:textSize="@dimen/font_size_middle" />

                <TextView
                    android:id="@+id/tv_memberCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_coterieMember"
                    android:text=""
                    android:textColor="@color/font_disable"
                    android:textSize="@dimen/font_size_middle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp" >

                <GridView
                    android:id="@+id/gv_coterieFace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:horizontalSpacing="4dp"
                    android:numColumns="5"
                    android:scrollbars="none" >
                </GridView>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="设置权限"
                android:textColor="@color/font_jobtitle"
                android:textSize="@dimen/font_size_middle" />

            <TextView
                android:id="@+id/tv_isOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text=""
                android:textColor="@color/font_disable"
                android:textSize="@dimen/font_size_middle" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="圈子说明"
                android:textColor="@color/font_jobtitle"
                android:textSize="@dimen/font_size_middle" />

            <TextView
                android:id="@+id/tv_coterieDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/font_disable"
                android:textSize="@dimen/font_size_middle" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:headerattr="http://schemas.android.com/apk/res/com.szrjk.dhome"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg" >

    <com.szrjk.widget.HeaderView
        android:id="@+id/hv_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        headerattr:htextstr="@string/friend" >
    </com.szrjk.widget.HeaderView>

    <ListView
        android:id="@+id/lv_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hv_friend"
        android:background="@color/white"
        android:divider="@color/line_list"
        android:dividerHeight="1px"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>
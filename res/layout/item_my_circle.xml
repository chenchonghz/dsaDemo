<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_item_circle"
    style="@drawable/button_pop_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_pop_selector"
    android:minHeight="60dp" 
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="@dimen/avatar_size_small"
        android:layout_height="@dimen/avatar_size_small"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header" />
    
    <TextView 
        android:id="@+id/tv_circle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:layout_marginTop="@dimen/margin_18dp"
        android:text="@string/circle_name"
        android:textColor="@color/font_titleanduname"
        android:textSize="@dimen/font_size_small"
        />
    
    <TextView 
        android:id="@+id/tv_circle_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:text="@string/sex"
        android:textColor="@color/font_cell"
        android:textSize="@dimen/font_size_xsmall"/>
   

</LinearLayout>
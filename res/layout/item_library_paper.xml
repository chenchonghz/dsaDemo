<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
     android:background="@drawable/button_pop_selector">
    
    <ImageView 
        android:id="@+id/iv_paper"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/icon_64_guidfocus"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        />
    <TextView 
        android:id="@+id/tv_paper"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Library1"
        android:textSize="@dimen/font_size_small"
        android:textColor="@color/font_jobtitle"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/iv_paper"
        />
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/iv_paper"
        android:background="@color/line_scrap"/>
    

</RelativeLayout>

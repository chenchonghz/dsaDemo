<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_item_circle"
    style="@drawable/button_pop_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_pop_selector"
    android:minHeight="60dp" >

    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="@dimen/avatar_size_small"
        android:layout_height="@dimen/avatar_size_small"
        android:layout_margin="@dimen/margin_10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/iv_circle"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_circle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/circle_name"
            android:textColor="@color/font_titleanduname"
            android:textSize="@dimen/font_size_small" />

        <RelativeLayout
            android:id="@+id/rly_circle_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_circle_name"
            android:layout_marginTop="7dp"
            android:layout_below="@id/tv_circle_name"
            android:background="@drawable/pic_peoplenum_bg20"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_circle_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:src="@drawable/icon_peoplenum" />

            <TextView
                android:id="@+id/tv_circle_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@id/iv_circle_num"
                android:text="@string/sex"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_xsmall" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/rly_circle_num"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_toRightOf="@id/rly_circle_num"
            android:background="@drawable/pic_individual_bg20"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:paddingRight="5dip" >

            <TextView
                android:id="@+id/tv_circle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_xsmall" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
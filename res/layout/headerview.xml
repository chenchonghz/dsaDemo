<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/lly_hv"
        style="@style/SendButton"
        android:layout_width="@dimen/header_height"
        android:layout_height="@dimen/header_height"
        android:layout_centerVertical="true"
        android:background="@drawable/button_pop_selector" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/header_left_margin"
            android:src="@drawable/icon_back_40" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_Image"
        style="@style/SendButton"
        android:layout_width="@dimen/header_height"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_pop_selector"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/btn_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/header_right_margin"
            android:src="@drawable/icon_messageset_40" />
    </LinearLayout>

    <TextView
        android:id="@+id/headerview_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/forget_header"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_large" />

    <TextView
        android:id="@+id/btn_text"
        android:layout_width="60dip"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_pop_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/post_send"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_middle"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btn_tv_back"
        android:layout_width="60dip"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_pop_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/post_cancel"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_middle"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-2dip"
        android:background="@drawable/shadow_color" />

</RelativeLayout>
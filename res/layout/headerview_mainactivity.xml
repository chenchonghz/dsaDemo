<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_headerview_mainactivity"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/base_bg2" >

    <TextView
        android:id="@+id/tv_digital_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:text="数字医生"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_large" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        style="@style/PopButton"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_add_36" />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        style="@style/PopButton"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_toLeftOf="@+id/iv_add"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_search_36" />

    <ImageView
        android:id="@+id/iv_linklist"
        style="@style/PopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_toLeftOf="@+id/iv_search"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_linklist_36" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:headerattr="http://schemas.android.com/apk/res/com.szrjk.dhome"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg" >

    <com.szrjk.widget.HeaderView
        android:id="@+id/hv_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        headerattr:htextstr="@string/friend" >
    </com.szrjk.widget.HeaderView>

    <LinearLayout
        android:id="@+id/lly_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/hv_friend"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rly_myfriend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/iv_myfriend"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:src="@drawable/icon_friend2" />

                <TextView
                    android:id="@+id/tv_myfriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_myfriend"
                    android:layout_toRightOf="@+id/iv_myfriend"
                    android:paddingLeft="@dimen/margin_8dp"
                    android:text="@string/my_friend"
                    android:textColor="@color/global_main"
                    android:textSize="@dimen/font_size_small" />
            </RelativeLayout>

            <View
                android:id="@+id/v_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/global_main"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rly_friendrequest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/iv_friendrequest"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:src="@drawable/icon_friend_request1" />

                <TextView
                    android:id="@+id/tv_friendrequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_friendrequest"
                    android:layout_toRightOf="@+id/iv_friendrequest"
                    android:paddingLeft="@dimen/margin_8dp"
                    android:text="@string/friend_request"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <ImageView
                    android:id="@+id/iv_remind"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_marginTop="22dp"
                    android:layout_toRightOf="@id/tv_friendrequest"
                    android:src="@drawable/remind"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:id="@+id/v_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/global_main"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lly_friend"
        android:background="@color/line_list" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/line3"
        android:background="@color/base_bg" />

</RelativeLayout>
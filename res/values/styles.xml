<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!-- 绿色按钮 -->
    <style name="FromButton">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_green_selector</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@drawable/btn_text_blue_white</item>
    </style>
    <!-- 蓝白按钮 -->
    <style name="FromBlueButton">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_blue_selector</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/green_button_selected</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!-- 我更多大号文字大小颜色 -->
    <style name="BigText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/font_titleanduname</item>
    </style>
    <!-- 关于我们文字样式 -->
    <style name="about">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/font_main</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_top_small</item>
    </style>
    <!-- 数字医生平台服务协议文字样式 -->
    <style name="platform_service_contract">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/font_main</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>
    <!-- 数字医生平台服务协议标题文字样式 -->
    <style name="platform_service_contract_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/font_jobtitle</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="add_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
 <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
 <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
 <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
 <!-- 无标题 -->
        <item name="android:windowBackground">@drawable/white</item>
 <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">false</item>
 <!-- 模糊 -->
    </style>

    <style name="Theme_Transparent" parent="@android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:headerattr="http://schemas.android.com/apk/res/com.szrjk.dhome"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/bg_librarguide">

    <com.szrjk.widget.HeaderView
        android:id="@+id/hv_library_paper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        headerattr:htextstr="@string/Library4" >
    </com.szrjk.widget.HeaderView>
    
    <ListView 
        android:id="@+id/lv_library_paper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hv_library_paper"></ListView>

</RelativeLayout>
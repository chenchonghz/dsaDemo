<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/view_doctorInfo_padding"
        android:paddingRight="@dimen/view_doctorInfo_padding"
        android:paddingTop="@dimen/view_doctorInfo_padding"
        android:paddingBottom="@dimen/view_post_padding_6"
        android:background="@color/base_bg"
        >
        <ImageView 
            android:id="@+id/iv_src_smallphoto"
            android:layout_width="@dimen/avatar_doctor_small_width"
            android:layout_height="@dimen/avatar_doctor_small_height"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/iv_src_yellow_icon" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_yellow_v_24"
            android:visibility="gone"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="28dp"
            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_src_smallphoto"
            android:layout_alignTop="@id/iv_src_smallphoto"
            android:paddingTop="@dimen/view_doctorInfo_paddingTop"
            android:paddingBottom="@dimen/view_doctorInfo_paddingBottom"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_src_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/view_doctorInfo_paddingLeft"
                android:paddingRight="@dimen/view_doctorInfo_paddingRight"
                android:textColor="@color/font_titleanduname"
                android:textSize="@dimen/font_size_middle"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView 
                android:id="@+id/tv_src_jobtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_jobtitle"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="6"
                android:textSize="@dimen/font_size_msmall"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_src_smallphoto"
            android:layout_alignBottom="@id/iv_src_smallphoto"
            android:layout_marginTop="@dimen/view_post_margin_5"
            >
            <TextView 
                android:id="@+id/tv_src_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_msmall"
                android:textColor="@color/font_cell"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="16"
                android:paddingLeft="@dimen/view_doctorInfo_paddingLeft"/>
            <TextView
                android:id="@+id/tv_src_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_msmall"
                android:textColor="@color/font_cell"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingLeft="@dimen/view_doctorInfo_paddingLeft"/>
        </LinearLayout>
        <TextView 
            android:id="@+id/tv_src_posttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_src_smallphoto"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/font_size_msmall"
            android:textColor="@color/font_cell"/>
    </RelativeLayout> 
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0.5dp"
    android:paddingLeft="@dimen/view_post_padding_11"
    android:paddingRight="@dimen/view_post_padding_11"
    style="@style/IndexButton"
    android:orientation="vertical" >
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/view_post_padding_11"
        android:paddingBottom="@dimen/view_post_padding_11">
        <ImageView
            android:id="@+id/iv_new_img" 
            android:layout_width="@dimen/avatar_size_middle"
            android:layout_height="@dimen/avatar_size_middle"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"/>
        <TextView 
            android:id="@+id/tv_new_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/iv_new_img"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/view_post_padding_5"
            android:paddingBottom="@dimen/view_post_padding_5"
            android:paddingLeft="@dimen/view_post_padding_11"
            android:text="热烈庆祝第三届中国-东盟药品合作发展高峰论坛举行"
            android:lineSpacingExtra="@dimen/textview_linespace"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/font_titleanduname"
            android:textSize="@dimen/font_size_small"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_new_img"
            android:layout_below="@id/tv_new_text"
            android:paddingTop="@dimen/view_post_padding_5"
            android:paddingBottom="@dimen/view_post_padding_5"
            android:paddingRight="@dimen/view_post_padding_5"
            android:paddingLeft="@dimen/view_post_padding_11"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_time" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_cell"
                android:textSize="@dimen/font_size_msmall"/>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_comment_24"/>
                <TextView
                    android:id="@+id/tv_commend_count" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="121"
                    android:textColor="@color/font_cell"
                    android:textSize="@dimen/font_size_msmall"
                    android:paddingLeft="@dimen/view_post_padding_3"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_type" 
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_textview"
                android:text="独家"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_msmall"
                android:paddingTop="@dimen/view_post_padding_1"
                android:gravity="center"
                android:paddingBottom="@dimen/view_post_padding_2"
                android:paddingLeft="@dimen/view_post_padding_7"
                android:paddingRight="@dimen/view_post_padding_7"/>
        </LinearLayout>
        
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_line_height"
        android:background="@color/line_list"
        />

</LinearLayout>

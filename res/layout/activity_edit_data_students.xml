<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:headerattr="http://schemas.android.com/apk/res/com.szrjk.dhome"
    android:id="@+id/rl_editdata_students"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg" >

    <com.szrjk.widget.HeaderView
        android:id="@+id/hv_editdata_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        headerattr:htextstr="@string/edit_data" >
    </com.szrjk.widget.HeaderView>

    <TextView
        android:id="@+id/tv_submit_students"
        android:layout_width="60dip"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_pop_selector"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_middle" />

    <ScrollView
        android:id="@+id/sv_edit_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/hv_editdata_students"
        android:background="@color/base_bg"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/rl_editall_students"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_bg" >

            <View
                android:id="@+id/view_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_25dp"
                android:layout_alignParentTop="true"
                android:background="@color/base_bg" />

            <RelativeLayout
                android:id="@+id/rl_avatar"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@id/view_top"
                android:background="@color/white" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/input_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/message_item_margin"
                    android:gravity="center_vertical"
                    android:text="@string/avatar"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/margin_10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_headfailed" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/message_item_height"
                android:layout_below="@id/rl_avatar"
                android:background="@color/white" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/input_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/message_item_margin"
                    android:gravity="center_vertical"
                    android:text="@string/type"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="@string/type"
                    android:textColor="@color/font_tabletitle"
                    android:textSize="@dimen/font_size_small" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/message_item_height"
                android:layout_below="@id/rl_type"
                android:background="@color/white" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/input_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/message_item_margin"
                    android:gravity="center_vertical"
                    android:text="@string/name"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="@string/name"
                    android:textColor="@color/font_tabletitle"
                    android:textSize="@dimen/font_size_small" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/message_item_height"
                android:layout_below="@id/rl_name"
                android:background="@color/white" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/input_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/message_item_margin"
                    android:gravity="center_vertical"
                    android:text="@string/sex"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="@string/sex"
                    android:textColor="@color/font_tabletitle"
                    android:textSize="@dimen/font_size_small" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_birthday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/message_item_height"
                android:layout_below="@id/rl_sex"
                android:background="@color/white" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/input_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/message_item_margin"
                    android:gravity="center_vertical"
                    android:text="@string/birthday"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="@string/birthday"
                    android:textColor="@color/font_tabletitle"
                    android:textSize="@dimen/font_size_small" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/message_item_height"
                android:layout_below="@id/rl_birthday"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/white" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/input_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/message_item_margin"
                    android:gravity="center_vertical"
                    android:text="@string/city"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/et_city"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="@string/city"
                    android:textColor="@color/font_tabletitle"
                    android:textSize="@dimen/font_size_small" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_editstudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_city"
                android:background="@color/base_bg" >

                <RelativeLayout
                    android:id="@+id/rl_school"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_alignParentTop="true"
                    android:background="@color/white" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/input_bg" />

                    <TextView
                        android:id="@+id/tv_school"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/message_item_height"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/message_item_margin"
                        android:gravity="right|center_vertical"
                        android:text="@string/Editschool"
                        android:textColor="@color/font_titleanduname"
                        android:textSize="@dimen/font_size_small" />

                    <EditText
                        android:id="@+id/et_school"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/message_item_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:layout_toRightOf="@+id/tv_school"
                        android:background="@null"
                        android:ems="10"
                        android:focusable="false"
                        android:gravity="right|center_vertical"
                        android:maxLength="16"
                        android:singleLine="true"
                        android:text="@string/Editschool"
                        android:textColor="@color/font_tabletitle"
                        android:textSize="@dimen/font_size_small" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_education"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_below="@id/rl_school"
                    android:background="@color/white" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/input_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/message_item_height"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/message_item_margin"
                        android:gravity="right|center_vertical"
                        android:text="@string/Editeducation"
                        android:textColor="@color/font_titleanduname"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_education"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/message_item_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:completionThreshold="1"
                        android:ems="10"
                        android:gravity="right|center_vertical"
                        android:singleLine="true"
                        android:text="@string/Editeducation"
                        android:textColor="@color/font_tabletitle"
                        android:textSize="@dimen/font_size_small" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_major"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_below="@id/rl_education"
                    android:background="@color/white" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/input_bg" />

                    <TextView
                        android:id="@+id/tv_major"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/message_item_height"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/message_item_margin"
                        android:gravity="right|center_vertical"
                        android:text="@string/major"
                        android:textColor="@color/font_titleanduname"
                        android:textSize="@dimen/font_size_small" />

                    <EditText
                        android:id="@+id/et_major"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/message_item_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:layout_toRightOf="@id/tv_major"
                        android:background="@null"
                        android:completionThreshold="1"
                        android:ems="10"
                        android:focusable="false"
                        android:gravity="right|center_vertical"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:text="@string/major"
                        android:textColor="@color/font_tabletitle"
                        android:textSize="@dimen/font_size_small" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/message_item_height"
                    android:layout_below="@id/rl_major"
                    android:background="@color/white" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/input_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/message_item_height"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/message_item_margin"
                        android:gravity="right|center_vertical"
                        android:text="@string/time"
                        android:textColor="@color/font_titleanduname"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/message_item_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:background="@null"
                        android:completionThreshold="1"
                        android:ems="10"
                        android:focusable="false"
                        android:gravity="right|center_vertical"
                        android:singleLine="true"
                        android:text="@string/time"
                        android:textColor="@color/font_tabletitle"
                        android:textSize="@dimen/font_size_small" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/rl_time"
                    android:background="@color/base_bg" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
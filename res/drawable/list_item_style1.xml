<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true">
    <shape>
        <stroke android:width="1dp" />
    </shape>
</item>


<item>
    <shape>
        <padding
            android:bottom="8dp"
            android:left="10dp"
            android:right="10dp"
            android:top="8dp" />

        <stroke android:width="0dp" android:color="@color/line_scrap" />
    </shape>
</item>

</selector>

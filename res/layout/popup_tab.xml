<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/header_height"
    android:background="@color/base_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/header_height" >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/base_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="15dip" >

        <LinearLayout
            android:id="@+id/lly_post"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/tab_post_size"
                android:layout_height="@dimen/tab_post_size"
                android:gravity="center_horizontal"
                android:src="@drawable/icon_post" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:text="@string/send_post"
                android:textColor="@color/font_cell" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lly_share"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/tab_post_size"
                android:layout_height="@dimen/tab_post_size"
                android:gravity="center_horizontal"
                android:src="@drawable/icon_sickshare" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:text="@string/send_share"
                android:textColor="@color/font_cell" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lly_help"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_help"
                android:layout_width="@dimen/tab_post_size"
                android:layout_height="@dimen/tab_post_size"
                android:gravity="center_horizontal"
                android:src="@drawable/icon_sickhelp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:text="@string/send_help"
                android:textColor="@color/font_cell" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_cancel"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/edit_input_height"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dip" >

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="center"
            android:src="@drawable/icon_offcancle" />
    </LinearLayout>

</RelativeLayout>
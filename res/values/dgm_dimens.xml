<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HeaderView">
        <attr name="htextstr" format="string"></attr>
    </declare-styleable>
    
    <!--按钮-->
    <style name="btnFillParent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>


    <!--注册内容标题-->
    <style name="reg_contain_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/base_padding_left</item>
        <item name="android:layout_marginRight">@dimen/base_padding_right</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">@color/font_titleanduname</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="reg_contain_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/base_padding_left</item>
        <item name="android:layout_marginRight">@dimen/base_padding_right</item> 
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/font_tabletitle</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!--text表单样式-->
    <style name="comm_form_text1">
        <item name="android:layout_marginLeft">@dimen/base_padding_left</item>
        <item name="android:layout_marginRight">@dimen/base_padding_right</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/font_cell</item>
        <item name="android:background">@drawable/edit_input_bg</item>
    </style>


</resources>
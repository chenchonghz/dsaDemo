<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        >
         <RelativeLayout
        android:id="@+id/rl_transmit" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/IndexButton"
        android:paddingTop="@dimen/view_command_padding_4"
        android:paddingBottom="@dimen/view_command_padding_4"
        android:gravity="center"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_transmit" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/view_post_title_padding"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/font_cell"
            android:text="@string/transmit_text"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_transmit"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_transmit_24"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/rl_command" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/IndexButton"
        android:paddingTop="@dimen/view_command_padding_4"
        android:paddingBottom="@dimen/view_command_padding_4"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_command" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/view_post_title_padding"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/font_cell"
            android:text="@string/command_text"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_command"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_comment_24"/>
      </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_like"  
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/view_command_padding_4"
        android:paddingBottom="@dimen/view_command_padding_4"
        style="@style/IndexButton"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_like" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/view_post_title_padding"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/font_cell"
            android:text="@string/like_text"
            />
        <ImageView 
            android:id="@+id/iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_like"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_laud_24"/>
    </RelativeLayout>
        
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_2"
        android:background="@drawable/shadow_color" />

</LinearLayout>

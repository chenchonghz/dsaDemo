<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:headerattr="http://schemas.android.com/apk/res/com.szrjk.dhome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg" >

    <com.szrjk.widget.HeaderView
        android:id="@+id/hv_library_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        headerattr:htextstr="@string/Library1" >
    </com.szrjk.widget.HeaderView>

    <View
        android:id="@+id/view1"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/hv_library_guide"
        android:background="@color/line_scrap" />

    <ScrollView
        android:id="@+id/sv_library_guide"
        android:layout_width="125dp"
        android:layout_height="match_parent"
        android:layout_below="@id/hv_library_guide"
        android:layout_toRightOf="@id/view1"
        android:background="@color/bg_librarguide" >

        <LinearLayout
            android:id="@+id/lly_library_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rly_library_medicine"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="@color/white"
                 >

                <ImageView
                    android:id="@+id/iv_library_medicine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/icon_64_medicinefocus"
                     />

                <TextView
                    android:id="@+id/tv_library_medicine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_library_medicine"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="8dp"
                    android:text="内科"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_scrap" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rly_library_surgery"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="@color/bg_librarguide" 
                >

                <ImageView
                    android:id="@+id/iv_library_surgery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/icon_64_surgery" />

                <TextView
                    android:id="@+id/tv_library_surgery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_library_surgery"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="8dp"
                    android:text="外科"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_scrap" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rly_library_obgyn"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="@color/bg_librarguide"
                >

                <ImageView
                    android:id="@+id/iv_library_obgyn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/icon_64_obgyn" />

                <TextView
                    android:id="@+id/tv_library_obgyn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_library_obgyn"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="8dp"
                    android:text="妇产科"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_scrap" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rly_library_pediatrics"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="@color/bg_librarguide"
                  >

                <ImageView
                    android:id="@+id/iv_library_pediatrics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/icon_64_pediatrics" />

                <TextView
                    android:id="@+id/tv_library_pediatrics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_library_pediatrics"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="8dp"
                    android:text="儿科"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_scrap" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rly_library_otherdepartment"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="@color/bg_librarguide"
                >

                <ImageView
                    android:id="@+id/iv_library_otherdepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/icon_64_otherdepartment" />

                <TextView
                    android:id="@+id/tv_library_otherdepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_library_otherdepartment"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="8dp"
                    android:text="其他"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_scrap" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rly_library_pharmacopoeia"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="@color/white" 
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_library_pharmacopoeia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/icon_64_pharmacopoeiafocus" />

                <TextView
                    android:id="@+id/tv_library_pharmacopoeia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_library_pharmacopoeia"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="8dp"
                    android:text="药典"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_scrap" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rly_library_guid"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="@color/bg_librarguide" 
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_library_guid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/icon_64_guid"></ImageView>

                <TextView
                    android:id="@+id/tv_library_guid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_library_guid"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="8dp"
                    android:text="指南"
                    android:textColor="@color/font_titleanduname"
                    android:textSize="@dimen/font_size_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_scrap" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/view2"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_below="@id/hv_library_guide"
        android:layout_toRightOf="@id/sv_library_guide"
        android:background="@color/line_scrap" />

    <ListView
        android:id="@+id/lv_library_guide_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hv_library_guide"
        android:layout_toRightOf="@id/view2"
        android:background="@color/white" 
        android:divider="@null"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
    </ListView>

</RelativeLayout>
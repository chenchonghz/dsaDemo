<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/search_bg" >

    <LinearLayout
        android:id="@+id/lly_hv"
        style="@style/SendButton"
        android:layout_width="@dimen/header_height"
        android:layout_height="@dimen/header_height"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/header_left_margin"
            android:src="@drawable/icon_back_32" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/forget_header"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_large" />
    
    <LinearLayout
        android:id="@+id/ll_dotmore"
        style="@style/SendButton"
        android:layout_width="@dimen/header_height"
        android:layout_height="@dimen/header_height"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/iv_dotmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_dotmore_44"
             />
	</LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.szrjk.dhome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_seting"
    android:background="@color/base_bg"
    android:orientation="vertical" >

    <com.szrjk.widget.HeaderView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:htextstr="设置" >
    </com.szrjk.widget.HeaderView>

    <RelativeLayout
        android:id="@+id/rl_change_hportrait"
        style="@style/PopButton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_height"
        android:layout_marginTop="@dimen/more_line_top"
        android:padding="@dimen/seting_padding" >

        <TextView
            style="@style/BigText"
            android:layout_centerVertical="true"
            android:text="@string/seting_change_hportrait" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_list" />
    <RelativeLayout
        android:id="@+id/rl_change_background"
        style="@style/PopButton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_height"
        android:padding="@dimen/seting_padding" >

        <TextView
            style="@style/BigText"
            android:layout_centerVertical="true"
            android:text="@string/seting_change_background" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_arrow" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_list" />
	<RelativeLayout
        android:id="@+id/rl_change_password"
        style="@style/PopButton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_height"
        android:layout_marginTop="@dimen/more_line_top"
        android:padding="@dimen/seting_padding" >

        <TextView
            style="@style/BigText"
            android:layout_centerVertical="true"
            android:text="@string/seting_change_password" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_list" />
    <RelativeLayout
        android:id="@+id/rl_change_phonenumber"
        style="@style/PopButton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_height"
        android:padding="@dimen/seting_padding" >

        <TextView
            style="@style/BigText"
            android:layout_centerVertical="true"
            android:text="@string/seting_change_phonenumber" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_arrow" />
        <TextView 
            android:id="@+id/tv_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_arrow"
            android:layout_marginRight="@dimen/seting_marginRight"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/font_disable"
            android:textSize="@dimen/font_size_middle"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_list" />
    <RelativeLayout
        android:id="@+id/rl_clear_cache"
        style="@style/PopButton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_height"
        android:layout_marginTop="@dimen/more_line_top"
        android:padding="@dimen/seting_padding" >

        <TextView
            style="@style/BigText"
            android:layout_centerVertical="true"
            android:text="@string/seting_clear_cache" />

        <TextView 
            android:id="@+id/tv_cacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0.0MB"
            android:textColor="@color/font_disable"
            android:textSize="@dimen/font_size_middle"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_list" />
    <RelativeLayout
        android:id="@+id/rl_text_size"
        style="@style/PopButton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_height"
        android:padding="@dimen/seting_padding" >

        <TextView
            style="@style/BigText"
            android:layout_centerVertical="true"
            android:text="@string/seting_text_size" />

        <TextView 
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="小"
            android:textColor="@color/font_disable"
            android:textSize="@dimen/font_size_middle"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_list" />
    <RelativeLayout
        android:id="@+id/rl_log_out"
        style="@style/PopButton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_height"
        android:layout_marginTop="@dimen/more_line_top"
        android:padding="@dimen/seting_padding" >

        <TextView
            style="@style/BigText"
            android:layout_centerVertical="true"
            android:text="@string/seting_log_out" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_list" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical" >
    
    <com.szrjk.pull.PullToRefreshScrollView
        android:id="@+id/sl_messages" 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_bg"
            android:orientation="vertical">

            <com.szrjk.sdlv.SlideAndDragListView
                android:id="@+id/lv_messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/view_post_margin_11"
                android:divider="@color/line_list"
                android:dividerHeight="0.5dp"
                >
            </com.szrjk.sdlv.SlideAndDragListView>
            <Button 
                android:id="@+id/bt_botton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进入新闻"/>              
        </LinearLayout>       
    </com.szrjk.pull.PullToRefreshScrollView>

</LinearLayout>

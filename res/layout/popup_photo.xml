<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/header_height"
    android:paddingTop="@dimen/header_height"
    android:background="@drawable/pic_popupmask"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/base_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_picture"
            style="@style/PopButton"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/edit_input_height"
            android:gravity="center"
            android:text="拍照"
            android:textColor="@color/search_bg"
            android:textSize="@dimen/font_size_small" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/base_bg" />

        <TextView
            android:id="@+id/tv_photo"
            style="@style/PopButton"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/edit_input_height"
            android:gravity="center"
            android:text="从手机相册选择"
            android:textColor="@color/search_bg"
            android:textSize="@dimen/font_size_small" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/base_bg" />

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/PopButton"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/edit_input_height"
            android:layout_marginTop="4dip"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/font_cell"
            android:textSize="@dimen/font_size_small" />
    </LinearLayout>

</RelativeLayout>